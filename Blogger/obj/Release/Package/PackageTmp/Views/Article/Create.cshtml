@model Blogger.Models.Article

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="model" aria-hidden="true">&times;</button>
            <h3 class="modal-title">
                新增文章
            </h3>
        </div>
        <div class="modal-body">
            <div class="form-horizontal">
                @*建立新增文章所需要的表單*@
                @using (Html.BeginForm("Create", "Article", new { }, FormMethod.Post, null))
                {
                    @*產生新增文章資料表單內容*@
                    <div class="form-group">
                        @Html.LabelFor(m => m.Account, new
                        {
                            @class = "col-xs-4 form-label"
                        })
                        <div class="col-xs-8">
                            @User.Identity.Name
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Title, new
                        {
                            @class = "col-xs-4 form-label"
                        })
                        <div class="col-xs-8">
                            @Html.TextBoxFor(m => m.Title,new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Title, null, new { @class = "label label-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Content, new
                        {
                            @class = "col-xs-4 form-label"
                        })
                        <div class="col-xs-8">
                            @Html.TextAreaFor(m => m.Content, new { @class = "form-control"})
                            @Html.ValidationMessageFor(m => m.Content, null, new { @class = "label label-danger" })
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="modal-footer">
            <input class="btn btn-primary" id="createBtn" type="button"  value="新增文章" />
            <input class="btn btn-danger" data-dismiss="modal" type="button" value="取消" />

        </div>
    </div>
</div>