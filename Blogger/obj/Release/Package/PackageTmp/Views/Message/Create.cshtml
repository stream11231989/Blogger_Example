@model Blogger.Models.Message

@*新增留言表單*@
@using (Ajax.BeginForm("Add", "Message", new{A_Id = ViewData["A_Id"] },
    new AjaxOptions
    {
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "MessageList"
    },new 
    {
    })) 
{
    <table>
        <tr>
            <td>
                @Html.TextBoxFor(m=>m.Content, new { @class= "form-contol"})
                @Html.ValidationMessageFor(m=>m.Content)
            </td>
            <td>
                <input id="createMessage" class="btn btn-primary" type="submit" value="來留言" />
            </td>
        </tr>
    </table>
}