@model Blogger.ViewModels.MembersLoginViewModel

@{
    ViewBag.Title = "登入";
}

@*匯入驗證用所需的Scrript*@
@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")

}

@*標題*@
<div class="page-header">
    <h1>登入</h1>
</div>

<div class="form-horizontal">
    @*建立登入所需要用到的表單*@
    @using (Html.BeginForm())
    {
        @*顯示彙總的表單的驗證的錯誤訊息*@
        <div class="alert-warning">
            @Html.ValidationSummary()
        </div>
        @*產生登入帳號密碼表單內容*@
        <div class="form-group">
            @Html.LabelFor(m => m.Account, new { @class = "col-xs-4 col-md-1 form-label" })
            <div class="col-xs-8 col-md-11">
                @Html.TextBoxFor(m => m.Account, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Account, null, new { @class = "label label-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-xs-4 col-md-1 form-label" })
            <div class="col-xs-8 col-md-11">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Account, null, new { @class = "label label-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-1 col-md-10">
                <input class="btn btn-primary" type="submit" value="登入" />
                @Html.ActionLink("去註冊", "Register")
            </div>
        </div>
    }
</div>